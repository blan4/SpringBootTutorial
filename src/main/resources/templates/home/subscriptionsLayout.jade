extends ../layout
block append content
  .row#js-subscriptions
  
  script(id="subscriptionsTemplate", type="text/x-handlebars-template")
    table.table.table-hover
      thead
        tr
          th Id
          th Name
          th Email
      tbody
      | {{#each data}}  
      tr(data-id='{{id}}')
        td {{id}}
        td {{name}}
        td {{email}}
        td
          a.btn.btn-danger.js-remove Remove
      | {{/each}}
